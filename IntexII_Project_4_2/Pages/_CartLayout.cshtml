@{
}

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Aurora Bricks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IntexII_Project_4_2.styles.css" asp-append-version="true" />
    </head>

    <style>
    body {
        width: 100%;
        height: 100%;
    }

    header {
        background-color: #FFD700;
    }

    footer {
        background-color: #FFD700;
        padding-top: 25px;
        padding-bottom: 25px;
    }

    #header {
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

    .header-container {
        background: #FFD700;
        height: 7.2rem;
        transition: all 0.2s ease-in-out;
        z-index: 100;
    }

        .header-container.fixedToTop {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
        }

    html {
        position: relative;
        min-height: 100%;
        max-width: 100%;
        height: auto;
    }

    body {
        padding-bottom: 60px;
        width: 100%;
    }

    </style>



    <body>
    <div class="header-container">
        <header style="padding-top: 10px;">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="text-align: right;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/combinedlogo.png" style="height: 64px;" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div style="align-content:flex-end;">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <ul class="navbar-nav flex-grow-1" style="font-weight: bolder;">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ViewProducts">PRODUCTS</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">ABOUT US</a>
                                </li>
                                <partial name="_LoginPartial" />
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/cart">CART</a>
                                </li>

                            </ul>

                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </div>
        <div class="">
            @RenderBody()
        </div>
    <br />
    <br />
    <br />
    <br />
    <footer class="border-top footer text-muted">
        <div class="" style="color:black; text-align:center; font-weight:bold;">
            &copy; 2024 - Aurora Bricks <br /><br /><a style="text-decoration: none; color: black;" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Notice | Cookie Preferences</a>
        </div>
    </footer>
    </body>
</html>