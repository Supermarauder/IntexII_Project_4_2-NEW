@model OrderListViewModel

<style>
    header {
        background-color: #4d96d1;
    }

    .header-container {
        background: #4d96d1;
        height: 7.2rem;
        transition: all 0.2s ease-in-out;
        z-index: 100;
    }

    footer {
        background-color: #4d96d1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #FFD700;
    }
</style>
<br />
<br />
<h2>Order Log</h2>
<br /><br />
<a style="text-decoration: underline; color: black;" href="@Url.Action("AllOrders", new { filter = "all" })">Show All Orders</a>
<br />
<a style="text-decoration: underline; color: black;" href="@Url.Action("AllOrders", new { filter = "unfulfilled" })">Show Unfulfilled Orders</a>
<br />
<a style="text-decoration: underline; color: black;" href="@Url.Action("AllOrders", new { filter = "fraud" })">Show Fraudulent Orders</a>
<br />
<br />
<table>
    <tr>
        <th>Transaction ID</th>
        <th>Customer ID</th>
        <th>Date/Hour of Day</th>
        <th>Amount</th>
        <th>Country of Transaction</th>
        <th>Shipping Address</th>
        <th>Bank</th>
        <th>Type of Card</th>
        <th>Fraudulent Orders</th>
        <th>Fulfilled/Resolved</th>
        <th><p> </p></th>
    </tr>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.TransactionId</td>
            <td>@order.CustomerId</td>
            <td>@order.Date - @order.Time</td>
            <td>$@order.Amount</td>
            <td>@order.CountryOfTransaction</td>
            <td>@order.ShippingAddress</td>
            <td>@order.Bank</td>
            <td>@order.TypeOfCard</td>
            <td>@(order.Fraud > 0 ? "Yes" : "No") @if (order.Fraud > 0)
                {
                    <a class="btn btn-warning" href="@Url.Action("EditOrder", "Admin", new { id = order.TransactionId })">Review</a>
                }

            </td>
            <td>@(order.Fullfilled ? "Yes" : "No")</td>
        </tr>
    }
</table>

@if (Model.PaginationInfo != null)
{
    <div>
        Page @(Model.PaginationInfo.CurrentPage) of @(Model.PaginationInfo.TotalNumPages)

        @if (Model.PaginationInfo.CurrentPage > 1)
        {
            <a style="text-decoration: underline; color: black;" href="@Url.Action("AllOrders", new { filter = Model.CurrentFilter, page = Model.PaginationInfo.CurrentPage - 1 })">Previous</a>
        }

        @if (Model.PaginationInfo.CurrentPage < Model.PaginationInfo.TotalNumPages)
        {
            <a style="text-decoration: underline; color: black;" href="@Url.Action("AllOrders", new { filter = Model.CurrentFilter, page = Model.PaginationInfo.CurrentPage + 1 })">Next</a>
        }
    </div>
}