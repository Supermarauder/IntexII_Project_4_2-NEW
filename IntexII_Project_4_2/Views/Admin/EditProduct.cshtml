@model IntexII_Project_4_2.Data.Product

@{
    var formTitle = Model.ProductId == 0 ? "Add Product" : "Edit Product";
    ViewData["Title"] = formTitle;
}

<style>
    header {
        background-color: #4d96d1;
    }

    .header-container {
        background: #4d96d1;
        height: 7.2rem;
        transition: all 0.2s ease-in-out;
        z-index: 100;
    }

    footer {
        background-color: #4d96d1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #FFD700;
    }
</style>

<h1>@formTitle</h1>

<form asp-action="EditConfirmation" asp-controller="Admin" method="post">
    @if (Model.ProductId > 0)
    {
        <input type="hidden" asp-for="ProductId" />
        <div>
            <label>Product ID</label>
            <input type="text" value="@Model.ProductId" readonly class="form-control" />
        </div>
    }

    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" type="number" />
    </div>

    <div>
        <label asp-for="NumParts">Number of Parts</label>
        <input asp-for="NumParts" class="form-control" type="number" />
    </div>

    <div>
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div>
        <label asp-for="ImgLink">Image Link</label>
        <input asp-for="ImgLink" class="form-control" />
    </div>

    <div>
        <label asp-for="PrimaryColor">Primary Color</label>
        <input asp-for="PrimaryColor" class="form-control" />
    </div>

    <div>
        <label asp-for="SecondaryColor">Secondary Color</label>
        <input asp-for="SecondaryColor" class="form-control" />
    </div>

    <div>
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div>
        <label asp-for="Category">Category</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">@Model.ProductId == 0 ? "Add Product" : "Edit Product"</button>
</form>