@model IEnumerable<IntexII_Project_4_2.Data.Product>

@{
    ViewData["Title"] = "All Products";
}

<h1>All Products</h1>
<a class="btn btn-success" href="@Url.Action("AddProduct", "Admin")">Add New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Year</th>
            <th>Num Parts</th>
            <th>Price</th>
            <th>Primary Color</th>
            <th>Secondary Color</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td><img src="@product.ImgLink" alt="Image of @product.Name" style="height: 100px;"></td>
                <td>@product.Name</td>
                <td>@product.Year</td>
                <td>@product.NumParts</td>
                <td>$@product.Price</td>
                <td>@product.PrimaryColor</td>
                <td>@product.SecondaryColor</td>
                <td>@product.Category</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("EditProduct", "Admin", new { id = product.ProductId })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("DeleteConfirmation", "Admin", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>