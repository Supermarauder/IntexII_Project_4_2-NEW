@model Product

@{
    ViewData["Title"] = "Add New Product";
}

<h1>Add New Product</h1>

<form method="post" action="@Url.Action("AddProduct", "Admin")">
    <div>
        <label>Name:</label>
        <input type="text" name="Name" required>
    </div>
    <div>
        <label>Year:</label>
        <input type="number" name="Year" required>
    </div>
    <div>
        <label>Number of Parts:</label>
        <input type="number" name="NumParts" required>
    </div>
    <div>
        <label>Price:</label>
        <input type="number" name="Price" required>
    </div>
    <div>
        <label>Image Link:</label>
        <input type="text" name="ImgLink">
    </div>
    <div>
        <label>Primary Color:</label>
        <input type="text" name="PrimaryColor">
    </div>
    <div>
        <label>Secondary Color:</label>
        <input type="text" name="SecondaryColor">
    </div>
    <div>
        <label>Description:</label>
        <textarea name="Description" required></textarea>
    </div>
    <div>
        <label>Category:</label>
        <input type="text" name="Category" required>
    </div>

    <button type="submit">Add Product</button>
</form>

<a href="@Url.Action("AllProducts", "Admin")">Back to All Products</a>