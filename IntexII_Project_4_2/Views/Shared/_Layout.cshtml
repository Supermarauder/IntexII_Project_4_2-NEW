<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aurora Bricks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IntexII_Project_4_2.styles.css" asp-append-version="true" />
</head>

<style>
    nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    nav ul li {
        display: inline; /* Display list items inline */
        padding-left: 20px; /* Or any spacing you prefer */
    }
</style>
@if (!Context.Request.Cookies.ContainsKey("CookieConsent"))
{
    <div id="cookieConsentBanner" class="alert alert-info text-center" role="alert">
        We use essential cookies to make our site work. With your consent, we may also use non-essential cookies to improve user experience and analyze website traffic. By clicking "I Understand," you agree to our website's cookie use as described in our Cookie Policy.
        <button onclick="hideCookieBanner()" class="btn btn-primary btn-sm">I understand</button>
    </div>

    <script>
        function hideCookieBanner() {
            document.getElementById('cookieConsentBanner').style.display = 'none';
            document.cookie = "CookieConsent=true; path=/";
        }
    </script>
}
<body>
    <div class="header-container">
        <header style="padding-top: 10px;">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="text-align: right;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/combinedlogo.png" style="height: 64px;" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div style="align-content:flex-end;">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <ul class="navbar-nav flex-grow-1" style="font-weight: bolder;">
 
                                <partial name="_LoginPartial" />
                                
                            </ul>
                             
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </div>
    




    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <br />
    <footer class="border-top footer text-muted">
        <div class="" style="color:black; text-align:center; font-weight:bold;">
            &copy; 2024 - Aurora Bricks <br /><a style="text-decoration: none; color: black;" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Notice | Cookie Preferences</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


