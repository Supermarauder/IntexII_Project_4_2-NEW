@model Product

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-5">
        <img src="@Model.ImgLink" alt="Image of @Model.Name" style="max-width: 100%; max-height: 300px; object-fit: contain;">
    </div>
    <div class="col-7">
        <h2>Price: @Model.Price</h2>
        <p>Description: @(Model.Description)</p>
        <h4>Year: @Model.Year</h4> <!-- Assuming you have Year and Pieces properties -->
        <h4>Number of Pieces: @Model.NumParts</h4>
        <form method="post" asp-controller="Home" asp-action="AddToCart">
            <div class="quantity">
                <button type="button" onclick="decrementQuantity()">-</button>
                <input type="number" id="quantity" name="quantity" value="1" min="1" max="10">
                <button type="button" onclick="incrementQuantity()">+</button>
            </div>
            <input type="hidden" name="productId" value="@Model.ProductId" />
            <button type="submit" class="btn-outline-success btn-sm">Add to Cart</button>
        </form>
    </div>
</div>

